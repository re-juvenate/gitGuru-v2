{
  "manifest_version": 3,
  "name": "Git Guru",
  "version": "1.0",
  "description": "Help users get a better understanding of GitHub issues.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/issues/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
